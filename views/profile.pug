extends layout

block content
  .login-container
    h1 Profile
    if session && session.username
      p Welcome, #{session.username}!
      p Your Worker ID: #{session.workerId}
      //- Only show forced change-password prompt when the server set the flag
      if session.mustChangePassword
        p
          a.button-nav(href="/change-password") Change Password
    else
      p You are not logged in.
      a.button-nav(href="/login") Login
