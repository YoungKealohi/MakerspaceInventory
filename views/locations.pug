extends layout

block content
  .logout-button-container
    a.button-schedule(href="/schedule") Schedule
    a.button-logout(href="/") Log out
  h1 Locations
  p 
    a.button-nav(href=`/machines/`) Go Back To List of Machines

  p
    a.button-nav(href="/locations/new") Add New Location

  table(border="1" cellpadding="6" cellspacing="0")
    thead
      tr
        th Name
        th Description
        th Actions
    tbody
      each loc in locations
        tr
          td= loc.Name
          td= loc.Description || "â€”"
          td.form
            // EDIT: GET request (correct)
            a.button(href=`/locations/${loc.LocationID}/edit`) Edit

            // DELETE: POST request with confirmation
            form(method="post", action=`/locations/${loc.LocationID}/delete`, onsubmit="return confirm('Delete this location?');")
              button.delete(type="submit") Delete
